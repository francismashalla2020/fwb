<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/c_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:elevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:id="@+id/relativeNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/newsbg"
            android:padding="3dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                app:cardCornerRadius="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                >

                <ImageView
                    android:id="@+id/imageNews"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/bankss"
                    app:tint="@color/green"
                    android:padding="15dp"
                    android:contentDescription="@string/app_name"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/imageView"
                android:id="@+id/names"
                >
                <TextView
                    android:id="@+id/fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/google_sans_bold"
                    android:maxLines="2"
                    android:text="Francis"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@color/green"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/google_sans_bold"
                    android:maxLines="2"
                    android:layout_marginStart="2dp"
                    android:text="Mashalla"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@color/green"
                    android:textSize="13sp" />
            </LinearLayout>



            <TextView
                android:id="@+id/textViewTdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/names"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@id/imageView"
                android:fontFamily="@font/google_sans_regular"
                android:maxLines="2"
                android:padding="2dp"
                android:text="The impact of Mobile Apps The impact of Mobile Apps The impact of Mobile AppsThe impact of Mobile Apps"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/textPosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTdesc"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/imageView"
                android:fontFamily="@font/google_sans_regular"
                android:padding="5dp"
                android:text="@string/a52"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTdesc"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/textPosted"
                android:background="@drawable/r_t"
                android:fontFamily="@font/google_sans_regular"
                android:maxLines="1"
                android:padding="3dp"
                android:text="11-04-2022"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textSize="11sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>